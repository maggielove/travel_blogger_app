<!DOCTYPE html>
<html>
<head>
  <title>Travel Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% if current_user %>
    hello <%= current_user.username %> | <%= link_to "Log Out", '/logout' %>
  <% else %>
    <%= link_to "Log In", '/login' %> | <%= link_to "Sign Up", new_user_path %>
  <% end %>
</div>

<h1>Travel Blogger</h1>

<%= yield %>

</body>
</html>
