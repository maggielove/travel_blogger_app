<div class="post-title">
  <h2><%= "#{@post.title}" %></h2>
</div>

<div class="post-byline">
  <p><%= "#{@post.byline}".upcase %></p>
</div>

<div class="post-body">
  <%= "#{@post.body}" %>
</div>

<h3>Comments (<%= @post.comments.size %>)</h3>
<%= render partial: 'comments/form' %>
<%= render partial: 'posts/comment', collection: @post.comments %>

<%= link_to "delete", user_post_path, method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

<%= link_to "edit", edit_user_post_path %>

<%= link_to "new post", new_user_post_path %>

<%= link_to "home", '/' %>
